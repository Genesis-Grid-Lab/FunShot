{
    "version": "0.2.0",

    "configurations": [
        //Windows
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Editor",
            "program": "Editor.exe",
            // "externalConsole": false,
            "console": "integratedTerminal",
            "logging": {
                "moduleLoad": false,
                "trace": true
            },
            "cwd": "${workspaceFolder}/Targets/Debug/bin",
            "preLaunchTask": "FunShot-Debug"
        },

        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "SandBox",
            "program": "SandBox.exe",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/Targets/Debug/bin",
        },

        //Linux
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Editor Linux",
            "miDebuggerPath": "/usr/bin/gdb",
            "cwd": "/home/nesmy/GenDev/Targets/Debug/bin",
            "program": "${workspaceFolder}/Targets/Debug/bin/FunShot",
        },

        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Game Linux",
            "miDebuggerPath": "/usr/bin/gdb",
            "cwd": "${workspaceFolder}/Targets/Debug/bin",
            "program": "${workspaceFolder}/Targets/Debug/bin/Game",
        },
    ]
}